<div class="jumbotron-fluid text-center">
    <h1 class="display-2 mt-3">Politics Scraper</h1>
    <nav class="navbar navbar-expand-lg navbar-light header-nav">
        <div class="container">
            <div class="row justify-content-between">
                <ul class="col navbar-nav text-center">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/saved">Saved Articles </a>
                    </li>
                </ul>
            </div>

            <div class="row">
                <ul class="col navbar-nav text-right">
                    <li class="nav-item active">
                        <form class="navbar-form navbar-left">
                            <a class="btn btn-scrape" id="scrape-btn">
                                Scrape Articles
                            </a>
                        </form>
                    </li>
                    <li class="nav-item">
                        <form class="navbar-form navbar-left"></form>
                        <a class="btn btn-clear" id="clear-btn">
                            Clear Articles
                            </button>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>
<div class="container pt-3 mt-3">
    {{!-- If articles exist --}}
    {{#if article}}
    <div class="card-columns">
        
        {{#each article}}
        <div class="card" style="width: 18em">
            <img class="card-img-top" src={{this.image}} alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">
                    <a class="card-link" href={{this.link}}>{{this.title}}</a>
                </h5>
                <button class="btn card-btn save-btn" data-id={{this._id}}><i class="far fa-save"></i> Save</button>
            </div>
        </div>
        {{/each}}
        
    </div>
    {{!-- Or else show these messages --}}
    {{else}}
        <h2 class="center">You havent scraped any articles yet!</h2>
    {{/if}}
</div>